<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CreateAccount"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/createaccount">

    <RelativeLayout
        android:id="@+id/header_oval"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/header_oval">

        <RelativeLayout
            android:id="@+id/header_rectangle"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/header_rectangle">
        </RelativeLayout>

        <ImageView
            android:id="@+id/logo_small"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:background="@drawable/ic_gradient_logo">
        </ImageView>

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:text="@string/memorymap"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="5dp"
        android:id="@+id/personal_info"
        android:layout_below="@id/header_oval">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CreateAccountText"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:text="@string/sign_up_to"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="14sp">

        </TextView>

        <TextView
            android:id="@+id/ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_below="@id/CreateAccountText"
            android:layout_marginTop="7dp"
            android:text="@string/id"
            android:textColor="#23648C"
            android:textStyle="bold"
            android:textSize="14sp">
        </TextView>

        <!-- ID 입력 editText-->
        <EditText
            android:id="@+id/input_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ID"
            android:layout_alignLeft="@+id/ID"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="#00FFFFFF"
            android:hint="id"
            android:inputType="text">
        </EditText>

        <View
            android:layout_width="305dp"
            android:layout_height="1.5px"
            android:layout_below="@id/input_id"
            android:layout_alignLeft="@id/ID"
            android:layout_marginLeft="10dp"
            android:background="#FFFFFF">
        </View>

        <TextView
            android:id="@+id/pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ID"
            android:layout_below="@id/ID"
            android:layout_alignStart="@id/ID"
            android:layout_marginTop="35dp"
            android:text="@string/pw"
            android:textColor="#23648C"
            android:textStyle="bold"
            android:textSize="14sp">
        </TextView>

        <!--PW 입력 edit text-->
        <EditText
            android:id="@+id/input_pw"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pw"
            android:layout_alignLeft="@+id/pw"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="#00FFFFFF"
            android:hint="password"
            android:inputType="text">

        </EditText>

        <View
            android:layout_width="305dp"
            android:layout_height="1.5px"
            android:layout_below="@id/input_pw"
            android:layout_alignLeft="@id/pw"
            android:layout_marginLeft="10dp"
            android:background="#FFFFFF">
        </View>

        <TextView
            android:id="@+id/Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/pw"
            android:layout_below="@id/pw"
            android:layout_alignStart="@id/pw"
            android:layout_marginTop="35dp"
            android:text="@string/username"
            android:textColor="#23648C"
            android:textStyle="bold"
            android:textSize="14sp">
        </TextView>

        <EditText
            android:id="@+id/input_username"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Username"
            android:layout_alignLeft="@+id/Username"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="#00FFFFFF"
            android:hint="nickname"
            android:inputType="text">
        </EditText>

        <View
            android:layout_width="305dp"
            android:layout_height="1.5px"
            android:layout_below="@id/input_username"
            android:layout_alignLeft="@id/Username"
            android:layout_marginLeft="10dp"
            android:background="#FFFFFF">
        </View>

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/Username"
            android:layout_below="@id/Username"
            android:layout_alignStart="@id/Username"
            android:layout_marginTop="35dp"
            android:text="@string/email"
            android:textColor="#23648C"
            android:textStyle="bold"
            android:textSize="14sp">
        </TextView>

        <EditText
            android:id="@+id/input_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_alignLeft="@+id/email"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="#00FFFFFF"
            android:hint="mmap@sookmyung.ac.kr"
            android:inputType="text">
        </EditText>

        <View
            android:layout_width="305dp"
            android:layout_height="1.5px"
            android:layout_below="@id/input_email"
            android:layout_alignLeft="@id/email"
            android:layout_marginLeft="10dp"
            android:background="#FFFFFF">
        </View>

        <Button
            android:id="@+id/createButton"
            android:layout_width="310dp"
            android:layout_height="42dp"
            android:layout_below="@id/input_email"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/before_button_click"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/create"
            android:textColor="#23648C"
            style="@style/Widget.AppCompat.Button.Borderless">
        </Button>

    </RelativeLayout>



</RelativeLayout>
